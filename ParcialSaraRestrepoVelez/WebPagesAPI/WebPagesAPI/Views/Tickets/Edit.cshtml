@model ParcialSaraRestrepoVelez.DAL.Entities.Ticket

@{
    ViewData["Title"] = "Edit";

    Model.IsUsed = true;
}


<h4>Tiquetería</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Tickets" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />

            <partial name="../Shared/PartialViews/_TicketCreateEdit.cshtml" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




