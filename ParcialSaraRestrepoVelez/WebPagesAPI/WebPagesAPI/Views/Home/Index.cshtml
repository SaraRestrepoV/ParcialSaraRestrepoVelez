@model ParcialSaraRestrepoVelez.DAL.Entities.Ticket

@{
    ViewData["Title"] = "Home Page";
}

<div>
        <h1 class="display-4">Ingresa al evento</h1>
        <h4>Ingresa el id de tu boleta para ingresar al concierto</h4>
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control"  />
                            <span asp-validation-for="Id" class="text-danger"></span>
                            
                        </div>
                        <div>
                            <a asp-action="Enter" asp-route-id="" class="btn btn-outline-warning">Consultar</a>
                        </div>
                    
               
                </form>
            </div>
        </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");

        }
    }
</div>
